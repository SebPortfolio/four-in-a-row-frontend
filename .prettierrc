{
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "preserve",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": ["*.json", "*.html", "*.less"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": [".eslintrc"],
            "options": {
                "parser": "json",
                "trailingComma": "none"
            }
        }
    ]
}
